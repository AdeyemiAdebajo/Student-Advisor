<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - StudentAdvisor</title>

    <!-- Bootstrap & Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/StudentAdvisor.styles.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <style>
        /* Layout Structure */
        .main-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensures full height */
        }

        .main-content {
            flex-grow: 1; /* Expands content so footer stays at the bottom */
            padding: 20px;
        }

        /* Footer */
        .footer {
            background-color: #f8f9fa;
            font-size: 14px;
            padding: 10px 0;
            text-align: center;
            box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>

<body>

    <div class="container-fluid main-container">
        <div class="row vh-100 d-flex flex-nowrap">

            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar d-flex flex-column">
                <a href="/" class="d-flex align-items-center mb-3 me-md-auto link-dark text-decoration-none">
                    <i class="bi bi-mortarboard fs-3 text-primary me-2"></i>
                    <span class="fs-4 fw-bold">StudentAdvisor</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="/" class="nav-link link-dark active">
                            <i class="bi bi-house-door me-2"></i> Home
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard" class="nav-link link-dark">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                        </a>
                    </li>
                    <li>
                        <a class="nav-link link-dark" asp-area="" asp-page="/Students/Index">
                            <i class="bi bi-people me-2"></i> Students
                        </a>
                    </li>
                    <li>
                        <a href="/Messages" class="nav-link link-dark">
                            <i class="bi bi-chat-left-text me-2"></i> Messages
                        </a>
                    </li>
                    <li>
                        <a href="/Reports" class="nav-link link-dark">
                            <i class="bi bi-file-bar-graph me-2"></i> Reports
                        </a>
                    </li>
                </ul>
                <hr>
            </nav>

            <!-- Main Content Area -->
            <div class="col-md-9 col-lg-10 d-flex flex-column main-content">
                <!-- Top Navbar -->
                <nav class="navbar navbar-expand-lg px-4 border-bottom">
                    <div class="container-fluid">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                            <ul class="navbar-nav">
                                @await Html.PartialAsync("_LoginPartial")
                            </ul>
                        </div>
                    </div>
                </nav>

                <!-- Page Content -->
                <main class="flex-column">
                    @RenderBody()
                </main>

                <!-- Footer Stays at Bottom -->
                <footer class="footer bg-light text-center py-3 mt-auto">
                    <div class="container">
                        &copy; 2025 - StudentAdvisor | <a asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                </footer>
            </div>

        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>


