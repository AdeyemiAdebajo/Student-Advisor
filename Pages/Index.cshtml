@page 
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main class="main-content container-fluid">
  <header class="d-flex justify-content-between align-items-center p-3 bg-light border-bottom">
    <div class="input-group w-50">
      <span class="input-group-text"><i class="mdi mdi-magnify"></i></span>
      <input type="text" id="studentSearch" class="form-control" placeholder="Search students...">
    </div>
    
  </header>

  <div class="filters p-3 bg-white border-bottom d-flex gap-3">
    <select id="programFilter" class="form-select w-auto">
      <option value="">All Programs</option>
      <option value="cs">Computer Science</option>
      <option value="business">Business</option>
      <option value="engineering">Engineering</option>
    </select>
    
    <select id="semesterFilter" class="form-select w-auto">
      <option value="">All Semesters</option>
      <option value="1">Semester 1</option>
      <option value="2">Semester 2</option>
      <option value="3">Semester 3</option>
      <option value="4">Semester 4</option>
    </select>
  </div>
</main>

